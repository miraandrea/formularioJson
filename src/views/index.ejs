<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href='css/style.css'>
    <title>Listado de Personas</title>
</head>
<body>
    <div id="formulario" class="form-group">
        <h1 class="title">Listado de Personas</h1>
        <a href="/new-entry">Agregar Persona</a>
        <table class="listado">
            <thead>
                <tr>
                    <th><h1>Nombre</h1></th>
                    <th><h1>Documento</h1></th>
                    <th><h1>Telefono</h1></th>
                    <th><h1>Opciones</h1></th>
                </tr>
            </thead>
            <tbody>
                <% register.forEach(function (people) { %>
                    <tr>
                        <td><%= people.name%></td>
                        <td><%= people.document%></td>
                        <td><%= people.phone%></td>	
                        <td><a href="/delete/<%= people.id%>">Eliminar</a></td>	
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>